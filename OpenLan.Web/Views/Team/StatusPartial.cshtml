@using OpenLan.Web.Resources
@model OpenLan.Web.Models.Team

<h2>@Model.Name</h2>
<div class="row">
    <div class="col-md-3">
        <b>@Resources.Members</b><br />
        @foreach (var member in Model.Members)
        {
            @member.UserName<br />
        }
    </div>
    <div class="col-md-9">
        <p>@Resources.YourTokenIs <code>@Model.Token</code></p>
    </div>
</div>